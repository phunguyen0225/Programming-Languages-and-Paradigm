package assign1;
import java.util.*;

public class PerfectNumberChecker {
  public int sumOfFactors(int number) {
    int sum = 0;

    for (int i = 1; i < number; i++) {
      if (number % i == 0) {
        sum += i;
      }
    }
    
    return sum;
  }
  
  boolean evaluate(int number) {
    return sumOfFactors(number) == number;
  }
}

